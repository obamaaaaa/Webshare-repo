<?xml version='1.0' encoding='utf-8'?>
<addons>
<addon 
    id="plugin.video.webshare.stream.cinema" 
    name="Webshare Stream Cinema" 
    version="0.2.1" 
    provider-name="dlazebnikostka">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" />

    <extension point="xbmc.addon.metadata">
        <summary>Webshare Stream Cinema</summary>
        <description>Přehrávej filmy a seriály přes Webshare pomocí TheMovieDb.</description>
        <platform>all</platform>
        <language>cs</language>
    </extension>

    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </assets>

</addon>
<addon id="repository.webshare.streamcinema"
       name="Webshare StreamCinema Repository"
       version="1.0.5"
       provider-name="dlazebnikostka">

    <extension point="xbmc.addon.repository">
        <dir>
            <info compressed="false">https://addonupdate.endora.site/repo/addons.xml</info>
            <checksum verify="sha256">https://addonupdate.endora.site/repo/addons.xml.sha256</checksum>
            <datadir zip="true">https://addonupdate.endora.site/repo/</datadir>
            <hashes>sha256</hashes>
        </dir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="cs">Repozitář pro Webshare Stream Cinema</summary>
        <description lang="cs">Repo pro automatické aktualizace doplňku Webshare Stream Cinema.</description>
        <platform>all</platform>
        <provides>files</provides>
    </extension>

    <assets>
        <icon>icon.png</icon>
    </assets>
</addon>
</addons>
