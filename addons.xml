<?xml version='1.0' encoding='utf-8'?>
<addons>
<addon 
    id="plugin.video.webshare.stream.cinema" 
    name="Webshare Stream Cinema" 
    version="0.2.2" 
    provider-name="dlazebnikostka">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" />

    <extension point="xbmc.addon.metadata">
        <summary>Webshare Stream Cinema</summary>
        <description>Přehrávej filmy a seriály přes Webshare pomocí filmové databáze TheMovieDb.</description>
        <disclaimer></disclaimer>

        <platform>all</platform>
        <language>cs</language>

        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>
<addon id="repository.webshare.streamcinema"
       name="Webshare StreamCinema Repository"
       version="1.0.8"
       provider-name="dlazebnikostka">

    <extension point="xbmc.addon.repository">
        <dir>
            <info compressed="false">https://obamaaaaa.github.io/Webshare-repo/addons.xml</info>
            <checksum verify="sha256">https://obamaaaaa.github.io/Webshare-repo/addons.xml.sha256</checksum>
            <datadir zip="true">https://obamaaaaa.github.io/Webshare-repo/</datadir>
            <hashes>sha256</hashes>
        </dir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="cs">Repozitář pro Webshare Stream Cinema</summary>
        <description lang="cs">Repo pro automatické aktualizace doplňku Webshare Stream Cinema.</description>

        <platform>all</platform>
        <provides>files</provides>
        <language>cs</language>

        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>

</addon>
</addons>
